<div class="container p-4">
    <div class="row">
        {{!-- Tomo el array de links que fue pasado mediante la ruta y lo recorro--}}
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p class="m-2">{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Delete link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}{{!--En el casp de que no haya links en el array --}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no links saved yet.</p>
                    <a href="/links/add">Create one!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>